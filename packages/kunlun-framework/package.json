{
  "name": "kunlun-framework",
  "version": "6.2.0",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "lerna clean -y && lerna run clean",
    "dev": "lerna exec npm run dev --scope",
    "build": "lerna run build --parallel",
    "dist": "lerna run dist --parallel",
    "index": "lerna run index --parallel",
    "lint": "lint-staged && node ./scripts/check-keyword.js",
    "lint:all": "eslint --quiet --fix",
    "patch": "patch-package",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:@oinone/kunlun-spi": "jest --selectProjects=@oinone/kunlun-spi",
    "test:@oinone/kunlun-dsl": "jest --selectProjects=@oinone/kunlun-dsl",
    "test:@oinone/kunlun-request": "jest --selectProjects=@oinone/kunlun-request",
    "publish": "lerna publish --no-git-reset --skip-git --exact -y",
    "format": "prettier --write --parser typescript \"packages/**/*.ts\""
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.18.6",
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.2",
    "@rollup/plugin-commonjs": "15.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-replace": "2.4.2",
    "@types/jest": "~29.5.14",
    "@types/node": "14.6.4",
    "@typescript-eslint/eslint-plugin": "5.5.0",
    "@typescript-eslint/parser": "5.5.0",
    "@vue/eslint-config-typescript": "7.0.0",
    "conventional-changelog-cli": "2.0.35",
    "eslint": "7.9.0",
    "eslint-config-airbnb-typescript": "10.0.2",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-typescript": "2.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-vue": "7.20.0",
    "husky": "4.2.5",
    "jest": "~29.7.0",
    "jest-environment-jsdom": "~29.7.0",
    "lerna": "4.0.0",
    "lint-staged": "10.4.2",
    "patch-package": "6.2.2",
    "prettier": "2.5.0",
    "rimraf": "3.0.2",
    "rollup": "2.63.0",
    "rollup-plugin-fork-ts-checker": "0.0.6",
    "rollup-plugin-scss": "4.0.0",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "ts-jest": "29.3.0",
    "typescript": "4.5.2",
    "tslib": "2.3.1",
    "vue-eslint-parser": "7.11.0"
  }
}

{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "target": "ES6",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {},
    "lib": [
      "ES2018",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "declarationDir": "dist/types",
    "outDir": "dist",
    "noImplicitAny": false,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

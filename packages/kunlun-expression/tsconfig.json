{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES6",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "lib": [
      "ES2018",
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "noImplicitAny": false,
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}

{
  "name": "kunlun-dev",
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "clean": "lerna clean -y && lerna run clean",
    "postclean": "rimraf package-lock.json node_modules",
    "build": "lerna run build --parallel",
    "dev": "lerna exec npm run dev --scope",
    "lint": "lint-staged",
    "lint:all": "eslint --quiet --fix",
    "patch": "patch-package",
    "test": "lerna run test",
    "publish": "lerna publish --no-git-reset --skip-git --exact -y"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",

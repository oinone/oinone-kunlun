    "jest-serializer-vue": "~3.1.0",
    "jest-transform-stub": "~2.0.0",
    "lerna": "4.0.0",
    "lint-staged": "10.4.2",
    "patch-package": "6.2.2",
    "prettier": "2.5.0",
    "rimraf": "3.0.2",
    "rollup": "2.63.0",
    "rollup-plugin-fork-ts-checker": "0.0.6",
